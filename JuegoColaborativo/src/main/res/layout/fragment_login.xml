<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".LoginActivity$PlaceholderFragment">

    <ImageView
        android:contentDescription="@string/fragment_login_image"
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bienvenidos"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linearLayout2"
        android:layout_alignTop="@id/imageView1"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true">
    </LinearLayout>

    <EditText
        android:id="@+id/subgrupo"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:inputType="text"
        android:singleLine="false"
        android:textSize="25sp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@id/imageView1"
        android:layout_alignRight="@id/imageView1"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_subgrupo"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:singleLine="false"
        android:layout_alignBottom="@id/subgrupo"
        android:layout_alignStart="@id/imageView1"
        android:layout_alignLeft="@id/imageView1"
        android:layout_marginEnd="152dp"
        android:layout_marginRight="152dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:text="@string/fragment_login_button_comenzar"
        android:id="@+id/button_login"
        android:background="@drawable/rustic_button"
        android:layout_margin="50dp"
        style="@style/button"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true" />
</RelativeLayout>